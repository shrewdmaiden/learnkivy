#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    MainScreen:
    AnotherScreen:

<MainScreen>:
    name: "main"
    Button:
        on_release: app.root.current = "other"
        text: "Next Screen"
        font_size: 50

<AnotherScreen>:
    name: "other"
    Painter
    Button:
        text: "Back"
        font_size: 20
        pos_hint: {"right":1,"top":1}
        size_hint: 0.3,0.2
        color: 1,0,0,1
        on_release: app.root.current = "main"